{# templates/security/login.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Connexion - EliteAdmin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap 4 #}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

    <style>
        body {
            background-color: #f5f5f5;
        }
        .login-container {
            min-height: 100vh;
        }
        .login-image {
            background: url('{{ asset('images/login.jpg') }}') no-repeat center;
            background-size: cover;
        }
        .login-form-container {
            background-color: #ffffff;
            padding: 40px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            width: 100%;
            max-width: 400px;
        }
        .btn-google {
            background-color: #db4437;
            border-color: #db4437;
            color: white;
        }
        .btn-google:hover {
            background-color: #c23321;
            border-color: #c23321;
        }
        .logo {
            font-weight: bold;
            font-size: 24px;
            margin-bottom: 20px;
            color: #696cff;
        }
    </style>
</head>
<body>
<div class="container-fluid login-container d-flex align-items-center">
    <div class="row w-100">
        {# Left Side - Image #}
        <div class="col-md-7 d-none d-md-block login-image"></div>
        {# Right Side - Form #}
        <div class="col-md-5 d-flex align-items-center justify-content-center">
            <div class="login-form-container">
                <div class="logo text-center mb-4">
                    {% if erreur %}
                        <div class="alert alert-danger">
                            {{ erreur }}
                        </div>
                    {% endif %}

                    {% if statut %}
                    <div class="alert alert-danger">
                        {{ statut }}
                    </div>
                    {% endif %}

                    <img src="{{ asset('images/logo-icon.png') }}" alt="Logo" style="height:40px;">
                    elite<span style="color:#5a5bef;">admin</span>
                </div>
                <form method="post">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" name="username" id="username" class="form-control" placeholder="Enter username" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter password" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">LOG IN</button>
                </form>
            </div>
        </div>
    </div>
</div>

{# JS #}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
