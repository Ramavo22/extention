{% extends 'base.html.twig' %}

{% block title %}Leads{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <h2 class="mb-4">Liste des Leads</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Lead</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Customer</th>
                    <th>Assigned Employee</th>
                    <th>Expense (€)</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for lead in leads %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ lead.lead }}</td>
                        <td>{{ lead.phone }}</td>
                        <td>{{ lead.status }}</td>
                        <td>{{ lead.customer }}</td>
                        <td>{{ lead.assignedEmployee }}</td>
                        <td>{{ lead.expense }} €</td>
                        <td>
                            <a href="{{ path('lead_delete', { id: lead.id }) }}" class="btn btn-danger">Supprimer</a>
                            <button class="btn btn-warning" onclick="openEditModal({{ lead.id }}, '{{ lead.expense }}')">
                                Modifier
                            </button>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun lead disponible.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal de modification -->
    <div class="modal fade" id="editExpenseModal" tabindex="-1" aria-labelledby="editExpenseLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editExpenseLabel">Modifier la Dépense</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editExpenseForm" action="{{ path('lead_update_expense') }}" method="post">
                        <input type="hidden" id="leadId" name="leadId">
                        <div class="mb-3">
                            <label for="newExpense" class="form-label">Nouvelle Dépense (€)</label>
                            <input type="number" class="form-control" id="newExpense" name="newExpense" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Script pour gérer le pop-up et la requête AJAX -->
    <script>
        function openEditModal(leadId, currentExpense) {
            document.getElementById("leadId").value = leadId;
            document.getElementById("newExpense").value = currentExpense;
            let modal = new bootstrap.Modal(document.getElementById('editExpenseModal'));
            modal.show();
        }
    </script>
{% endblock %}
