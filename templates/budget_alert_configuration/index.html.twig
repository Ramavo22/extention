{% extends 'base.html.twig' %}

{% block title %}Configuration alerte{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
        <form method="post" action="{{ path('traitement_configuration') }}" class="p-4 border rounded bg-white shadow" style="min-width: 300px;">
            <h4 class="mb-3 text-center">Configuration du pourcentage de depassement</h4>
            {% if erreur %}
            <div class="alert alert-danger">
                {{ erreur }}
                {{ details }}
            </div>
            {% endif %}
            {% if message %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endif %}
            <div class="mb-3">
                <label for="nombre" class="form-label">pourcentage (%)</label>
                <input type="number" id="nombre" name="budget-alert" class="form-control" max="100" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Envoyer</button>
        </form>
    </div>
{% endblock %}
